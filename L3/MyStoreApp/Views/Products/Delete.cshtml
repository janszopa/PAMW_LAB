@{
    ViewData["Title"] = "Delete Product";
}

@model MyStoreApp.Models.Product

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Delete Product</h4>
    </div>
    <div class="card-body">
        <p>Are you sure you want to delete this product?</p>
        <div class="form-group">
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>
                <dt class="col-sm-2">Category</dt>
                <dd class="col-sm-10">@Model.Category</dd>
                <dt class="col-sm-2">Price</dt>
                <dd class="col-sm-10">@Model.Price</dd>
                <dt class="col-sm-2">Available</dt>
                <dd class="col-sm-10">@(Model.IsAvailable ? "Yes" : "No")</dd>
            </dl>
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
